<%- include('../header'); -%>


<div class="card ">
        <div class="card-header">
          <h4 class="card-title">Genero</h4>
        </div>
        <div class="card-body">
              <a class="btn btn-primary btn-round text-center" href="categoria/add">
                  <i class="tim-icons icon-simple-add"></i> Adiciona
              </a>
          <div class="table-responsive">
            <table class="table tablesorter " id="">
              <thead class=" text-primary">
                <th>
                  Genero
                </th>
                <th>
                  Edita
                </th>
                <th>
                  Deleta
                </th>
              </thead>
              <tbody>
                    <% Categorias.forEach(function(categoria){ %>
                      <tr>
                          
                          <td><%= categoria.nome %></td>
                          <td>
                              <a class="btn btn-info btn-fab btn-icon btn-round" href="categoria/edit/<%= categoria._id %>">
                                  <i class="tim-icons icon-pencil"></i>
                              </a>
                          </td>
                          <td>
                              <a class="btn btn-primary btn-fab btn-icon btn-round" href="categoria/delete/<%= categoria._id %>">
                                  <i class="tim-icons icon-trash-simple"></i>
                              </a>
                          </td>
                      </tr>
                    <%})%>        
              </tbody>
            </table>
          </div>
        </div>
          <div class="card-footer">
              <!--Testa se tem mensagem-->
                <% if (typeof msg != "undefined") { %>
                  <div class="alert alert-primary alert-dismissible fade show" role="alert">
                        <%= msg %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <i class="tim-icons icon-simple-remove"></i>
                      </button>
                  </div>
                <% } %>
              <!--Fecha o teste-->
        </div>
      </div>
<%- include('../footer'); -%>